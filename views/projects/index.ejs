<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">

      <h3 style="margin: 0px 0px 16px">Projects management</h3>

      <a class="btn btn-primary" href="projects/new">New APQP</a>


    </div>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <div class="col-lg-12">
      <h3>All projects</h3>
      <ul class="list-group">
        <% apqps.forEach(function(apqp) {%>
        <li class="list-group-item" style="text-align:left">
          <a href="/project/<%=apqp._id%>"><%= "APQP"+apqp.apqp_number+" - "+apqp.quote_num+" - "+apqp.customer %></a>
        </li>
        <div class="caption">
          <h4></h4>
        </div>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<% include ../partials/footer %>
