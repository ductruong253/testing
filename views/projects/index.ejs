<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">

      <h1>Projects management</h1>

      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Projects
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">View all</a>
          <a class="dropdown-item" href="projects/new">Add new project</a>
        </div>
      </div>
    </div>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <div class="col-lg-12">
      <h3>Current openning projects</h3>

      <% apqps.forEach(function(apqp) {%>


      <div class="caption">
        <h4><%= "APQP"+apqp.apqp_number+" - "+apqp.quote_num+" - "+apqp.customer %></h4>
      </div>
      <p>
        <a href="/apqp/<%=apqp._id%>" class="btn btn-lg btn-primary">More info</a>
      </p>

      <% }) %>
    </div>
  </div>
</div>

<% include ../partials/footer %>
