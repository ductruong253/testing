<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%=campground.image%>" alt="">
        <div class="caption-full">
          <h4 class="pull-right">$9.9/night</h4>
          <h4><a><%=campground.name%></a></h4>
          <p><%= campground.description%></p>
          <p>Submitted by <%=campground.author.username%></p>
          <%if (currentUser && campground.author.id.equals(currentUser._id)){%>

            <p><a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a></p>
            <form id="delete-form" class="" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
              <button class="btn btn-danger" name="button">Delete</button>

            </form>
          <%}%>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <p><a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Leave a comment</a></p>
        </div>
        <hr>
        <%campground.comments.forEach(function(comment){%>
        <div class="row">
          <div class="col-md-12">
            <p><strong><%=comment.author.username%></strong></p>
            <p><%=comment.text %></p>
            <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
